---
CompileFlags:
    Add: ["--target=arm-arm-none-eabi"]

---
If:
    PathMatch: [.*\.h]
    PathExclude: [.*/types.h]

CompileFlags:
    Add: [--include=<stdint.h>,
          --include=<stdbool.h>]

---
If:
    PathMatch: [src/.*]

CompileFlags:
    Add: [-Weverything,
          -Wno-covered-switch-default,
          -Wno-gnu-binary-literal,
          -Wno-reserved-identifier,
          -Wno-deprecated-volatile,
          -Wno-c++98-c++11-compat-binary-literal,
          -Wno-c++98-compat,
          -Wno-old-style-cast]
{
    "remote.extensionKind": {
        "ms-vscode.vscode-serial-monitor": [
          "workspace"
        ]
    },
    "clangd.arguments": [
        "--query-driver=/usr/sbin/arm-none-eabi-*",
        "--background-index",
        "--completion-style=detailed",
        "--header-insertion=never",
        "--log=verbose",
        "--pretty",
    ],

    "disasexpl.associations": {
        "**/*.c": "${workspaceFolder}/${fileBasenameNoExtension}.s",
        "**/*.cpp": "${workspaceFolder}/assembly/${fileBasenameNoExtension}.s"
    },
    "mesonbuild.configureOnOpen": false,
}
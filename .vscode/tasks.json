{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "configure",
            "type": "shell",
            "command": "${workspaceFolder}/tools/cmake_configure.bat",
            "problemMatcher": []
        },
        {
            "label": "build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build",
                "--clean-first"
            ],
            "problemMatcher": []
        },
        {
            "label": "flash",
            "type": "shell",
            "command": "openocd",
            "args": [
                "-f./tools/stlink.cfg",
                "-f./tools/stm32f3x.cfg",
                "-cprogram ./build/ryansullivan-quadcopter-flightcontroller.elf verify reset exit"
            ],
            "dependsOn": "build",
            "problemMatcher": []
        }
    ]
}
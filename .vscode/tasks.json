{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Clean",
            "type": "shell",
            "command": "rm",
            "args": [
                "-rf", "build/"
            ],
            "problemMatcher": []
        },
        {
            "label": "Configure Release",
            "dependsOn": "cmake clean",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S", ".",
                "-B", "build/release",
                "-D", "CMAKE_TOOLCHAIN_FILE=toolchain.cmake",
                "-D", "CMAKE_BUILD_TYPE=Release"
            ],
            "problemMatcher": []
        },
        {
            "label": "Configure Debug",
            "dependsOn": "cmake clean",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S", ".",
                "-B", "build/debug",
                "-D", "CMAKE_TOOLCHAIN_FILE=toolchain.cmake",
                "-D", "CMAKE_BUILD_TYPE=Debug"
            ],
            "problemMatcher": []
        },
        {
            "label": "Build Release",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build/release"
            ],
            "problemMatcher": []
        },
        {
            "label": "Build Debug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build/debug"
            ],
            "problemMatcher": []
        },
        {
            "label": "Clean Build Release",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build/release",
                "--clean-first"
            ],
            "problemMatcher": []
        },
        {
            "label": "Clean Build Debug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build/debug",
                "--clean-first"
            ],
            "problemMatcher": []
        },
        {
            "label": "Run",
            "type": "shell",
            "command": "openocd",
            "args": [
                "--file", "interface/stlink.cfg",
                "--file", "target/stm32f3x.cfg",
                "--command", "program ./build/release/quadcopter-flightcontroller.elf verify reset exit"
            ],
            "problemMatcher": []
        }
    ]
}
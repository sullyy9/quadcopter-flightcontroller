    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake clean",
            "type": "shell",
            "command": "rm -rf ./build",
            "problemMatcher": []
        },
        {
            "label": "cmake generate",
            "dependsOn": "cmake clean",
            "type": "shell",
            "command": "cmake -S . -B ./build",
            "problemMatcher": []
        },
        {
            "label": "cmake build",
            "type": "shell",
            "command": "cmake --build ./build",
            "problemMatcher": []
        },
        {
            "label": "cmake clean build",
            "type": "shell",
            "command": "cmake --build ./build --clean-first",
            "problemMatcher": []
        }
    ]
}
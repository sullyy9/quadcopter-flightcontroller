{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake generate",
            "type": "shell",
            "command": "cmake -S . -B ./build",
            "problemMatcher": []
        },
        {
            "label": "cmake build",
            "type": "shell",
            "command": "cmake --build ./build",
            "problemMatcher": []
        },
        {
            "label": "flash",
            "type": "shell",
            "command": "/tools/openocd/bin/openocd.exe",
            "args": [
                "-f${workspaceFolder}/tools/stlink.cfg",
                "-f${workspaceFolder}/tools/stm32f3x.cfg",
                "-cprogram ${workspaceFolder}/build/ryansullivan-quadcopter-flightcontroller.elf verify reset exit"
            ],
            "dependsOn": "build",
            "problemMatcher": []
        },
    ]
}
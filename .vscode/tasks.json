{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Setup Release",
            "type": "shell",
            "command": "meson",
            "args": [
                "setup",
                "--cross-file", "arm-none-eabi.build",
                "--buildtype=minsize",
                "builddir/release"
            ],
        },
        {
            "label": "Setup Debug",
            "type": "shell",
            "command": "meson",
            "args": [
                "setup",
                "--cross-file", "arm-none-eabi.build",
                "--buildtype=debugoptimized",
                "builddir/debug"
            ],
        },
        {
            "label": "Build Release",
            "type": "shell",
            "command": "meson",
            "args": [
                "compile",
                "-C", "builddir/release"
            ],
            "dependsOn": "Setup Release",
        },
        {
            "label": "Build Debug",
            "type": "shell",
            "command": "meson",
            "args": [
                "compile",
                "-C", "builddir/debug"
            ],
            "dependsOn": "Setup Debug",
        },
        {
            "label": "Run",
            "type": "shell",
            "command": "openocd",
            "args": [
                "--file", "interface/stlink.cfg",
                "--file", "target/stm32f3x.cfg",
                "--command", "program ./builddir/release/quadcopter-flightcontroller.elf verify reset exit"
            ],
            "dependsOn": "Build Release",
        },
        {
            "label": "Run Unit Tests",
            "type": "shell",
            "command": "openocd",
            "args": [
                "--file", "interface/stlink.cfg",
                "--file", "target/stm32f3x.cfg",
                "--command", "program ./builddir/release/unit_test.elf verify reset exit"
            ],
            "dependsOn": "Build Release",
        }
    ]
}
{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake clean",
            "type": "shell",
            "command": "rm",
            "args": [
                "-rf", "build/"
            ],
            "problemMatcher": []
        },
        {
            "label": "cmake generate",
            "dependsOn": "cmake clean",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S", ".",
                "-B", "build/",
                "-D", "CMAKE_TOOLCHAIN_FILE=toolchain.cmake"
            ],
            "problemMatcher": []
        },
        {
            "label": "cmake build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build/"
            ],
            "problemMatcher": []
        },
        {
            "label": "cmake clean build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build/",
                "--clean-first"
            ],
            "problemMatcher": []
        }
    ]
}